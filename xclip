# -*- coding: utf-8 -*-
from django.contrib import admin

from .models import FlashCard


@admin.register(FlashCard)
class FlashCardAdmin(admin.ModelAdmin):
    list_display = (
        'id',
        'created',
        'modified',
        'owner',
        'card_type',
        'level',
        'next_review_date',
        'mastered_at',
        'question',
        'answer',
    )
    list_filter = (
        'created',
        'modified',
        'owner',
        'next_review_date',
        'mastered_at',
    )
